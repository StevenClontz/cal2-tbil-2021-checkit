<exercise checkit-seed="0003" checkit-slug="SQ4" checkit-title="Geometric summations">
    <statement>
        <p>
            Find the limit of the following series.
        </p>
        <me>
            -3 + \sum_{n = 2 }^\infty 2\cdot\left(\frac{2}{3}\right)^n.
        </me>
    </statement>
    <answer>
        <me>
            -3 + \sum_{n = 2 }^\infty 2\cdot\left(\frac{2}{3}\right)^n=-\frac{1}{3}.
        </me>
    </answer>
</exercise>
