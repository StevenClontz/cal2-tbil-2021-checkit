<exercise checkit-seed="0009" checkit-slug="SQ4" checkit-title="Geometric summations">
    <statement>
        <p>
            Find the limit of the following series.
        </p>
        <me>
            5 + \sum_{n = 3 }^\infty 2\cdot\left(\frac{1}{3}\right)^n.
        </me>
    </statement>
    <answer>
        <me>
            5 + \sum_{n = 3 }^\infty 2\cdot\left(\frac{1}{3}\right)^n=\frac{46}{9}.
        </me>
    </answer>
</exercise>
