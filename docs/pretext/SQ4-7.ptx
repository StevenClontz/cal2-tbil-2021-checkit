<exercise checkit-seed="0007" checkit-slug="SQ4" checkit-title="Geometric summations">
    <statement>
        <p>
            Find the limit of the following series.
        </p>
        <me>
            -5 + \sum_{n = 3 }^\infty 2\cdot\left(\frac{3}{4}\right)^n.
        </me>
    </statement>
    <answer>
        <me>
            -5 + \sum_{n = 3 }^\infty 2\cdot\left(\frac{3}{4}\right)^n=-\frac{13}{8}.
        </me>
    </answer>
</exercise>
